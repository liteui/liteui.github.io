      hr.my-4.my-sm-5
      .row.js-data-item(data-name='d-3')
        .col-12.col-lg-6
          +form-input('dv-3', 'Значение 3', 'd-3-value', 'Введите значение', 'js-num-inputmask')
        .col-12.col-lg-6

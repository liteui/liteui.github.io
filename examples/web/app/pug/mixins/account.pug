mixin form-input(id, label, name, placeholder, inputClass)
  .form-group
    label(for=id)= label
    input.form-control(class=inputClass id=id type="text" name=name placeholder=placeholder autocomplete="off")

mixin data-item(id)
  .row.align-items-center
    .col-lg-9
      ul.nav.nav-tabs.mb-3
        li.nav-item
          a.nav-link.active(href="#" + id.chartTab data-toggle="tab") График
        li.nav-item
          a.nav-link(href="#" + id.listTab data-toggle="tab") История
      .tab-content
        .tab-pane.fade.show.active(id=id.chartTab)
          div(style='height:235px;')
            canvas.js-data-chart(id=id.chart)
        .tab-pane.fade(id=id.listTab)
          .pr-3.overflow-x-hidden.overflow-y-auto(style='height:235px;')
            .row.align-items-center.js-data-list
    .col-lg-3.text-center.mt-2.mt-lg-0
      p.m-0 До цели осталось: 
        span.js-data-diff
        |  ед.

mixin help-item(category, title, lists)
  .text-center
    h4= category
    h3.text-primary= title
    .row.mt-5.text-left
      each list in lists
        .col-6
          h5.text-md.text-bold.text-primary-shade= list.name
          ul.list.list-dotted
            each item in list.items
              li= item

mixin account-data()
  div
    h3.text-center.text-md-left Данные
    form.mt-5.js-data
      .row.js-data-item(data-name='d-1')
        .col-12.col-lg-6.js-data-input
          +form-input('dv-1', 'Значение 1', 'd-1-value', 'Введите значение', 'js-num-inputmask')
        .col-12.col-lg-6.js-data-input
          +form-input('dt-1', 'Цель 1', 'd-1-target', 'Введите значение', 'js-num-inputmask')
        .col-12.mt-3
          +data-item({chartTab: 'd-1-tab-c', listTab: 'd-1-tab-h', chart: 'd-1'})
      hr.my-4.my-sm-5
